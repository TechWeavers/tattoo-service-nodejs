                                        <label class="form-label">CPF:</label>
                                        <input type="text" name="cpf" class="form-control" id="cpf" required=" Dado Obrigatório!" >
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Telefone:</label>
                                        <input type="text" name="telefone" class="form-control" id="telefone" required=" Dado Obrigatório!" >
                                    </div>
