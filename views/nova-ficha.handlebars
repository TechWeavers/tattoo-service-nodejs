<!-- formulário de teste da linkagem de ficha-->
<div class="main-panel">        
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="row col-sm">

          <div class="row col-sm">
          <div id="ordem" class="col-auto pasta-ordem">
            <a href="/listar-cliente">Listar clientes</a>
          </div>
          <div id="ordem" class="col-auto  pasta-ordem">
            <a href="/novo-cliente">Cadastrar novo cliente</a>
          </div>
          <div id="ordem-ativo" class="col-auto  pasta-ordem">
            <a href="/novo-ficha">Editar ficha</a>
          </div>
        </div>

        <div class="card-body card-pasta">
          <div class="table-responsive ">
            <table class="table table-striped ">
              <h4 class="card-title">Ficha Anamnese</h4>
              <p class="card-description"> Cadastro de ficha</p>
              <p class="card-title"><strong>Coloque "N/A", caso algum dado seja inexistente.</strong></p>
              {{#each cliente}}
              {{#dataValues}}
                <form class="forms-sample" action="/cadastrar-ficha" method="POST">
                  <div class="form-group">
                    
                    <input type="hidden" name="id_cliente_ficha" class="form-control" id="id_cliente_ficha" value="{{id_cliente_ficha}}"> 
                    <label class="form-label">1º Alergia:</label>
                    <input type="text" required="Obrigatório" name="alergia1" class="form-control" id="alergia1" value="{{alergia1}}">
                  </div>

                  <div class="form-group">
                    <label class="form-label">2º Alergia:</label>
                    <input type="text" required="Obrigatório" name="alergia2" class="form-control" id="alergia2" value="{{alergia2}}">
                  </div>

                  <div class="form-group">
                    <label class="form-label">1º Medicação:</label>
                    <input type="text" required="Obrigatório" name="medicacao1" class="form-control" id="medicacao1" value="{{medicacao1}}">
                  </div>

                  <div class="form-group">
                    <label class="form-label">2º Medicação: </label>
                    <input type="text" required="Obrigatório" required="Obrigatório" name="medicacao2" class="form-control" id="medicacao2" value="{{medicacao2}}">
                  </div>

                  <div class="form-group">
                    <label class="form-label">1º Doença:</label>
                    <input type="text" required="Obrigatório" name="doenca1" class="form-control" id="doenca1" value="{{doenca1}}">
                  </div>

                  <div class="form-group">
                    <label class="form-label">2º Doença:</label>
                    <input type="text" required="Obrigatório" name="doenca2" class="form-control" id="doenca2" value="{{doenca2}}">
                  </div>



                  <button type="submit" class="butn bunt-primary mr-2">Cadastrar</button>
                </form>
                {{/dataValues}}
                {{/each}}
                </div>
            </table>    
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
