
<div class="main-panel">
  <div class="content-wrapper">
    
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="row col-sm">
          <div id="ordem-ativo" class="col-auto pasta-ordem">
            <a href="/listar-estoque">Lista Materias</a>
          </div>
          <div id="ordem" class="col-auto  pasta-ordem">
            <a href="/novo-estoque">Cadastrar Novo Material</a>
          </div>
        </div>
        <div class="card-body card-pasta">
                  
          <h4 class="card-title">Lista de materiais</h4>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>ID Material</th>
                  <th>Nome</th>
                  <th>Quantidade</th>
                  <th>Valor Unidade</th>
                  <th>Data de compra</th>
                </tr>
              </thead>
              {{#each materiais}}
              {{#dataValues}}
              <tbody>
                <tr>
                  <td class="py-1">{{id_material}}</td>
                  <td>{{nome}}</td>
                  <td>{{quantidade}}</td>
                  <td>{{valor_unidade}}</td>
                  <td>{{data_compra}}</td>
                  <td>
                    <button class="btn btn-secondary"><a href="/editar-estoque/{{id_material}}" style="color:inherit">Editar</a></button>
                    <button type="button" class="btn btn-primary" id="confirmDelete"><a href="/excluir-estoque/{{id_material}}" style="color:inherit">Delete</a></button>
                    <button class="btn btn-secondary"><a href="/consumir-estoque/{{id_material}}" style="color:inherit">Utilizar</a></button>
                  </td>
                </tr>
              </tbody>
              {{/dataValues}}
              {{/each}}
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
