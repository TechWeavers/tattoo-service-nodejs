<div class="main-panel ">

  <div class="content-wrapper bg-transparent">

    <div class="row">
      <!--Div lista de eventos--->
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="row col-sm">
          <div id="ordem-ativo" class="col-auto  pasta-ordem">
            <a href="/dashboard">Próximos agendamentos</a>
          </div>
        </div>

        <div class="card-body card-pasta bg-orange">

          <div class="table-responsive">
            <table class="table table-striped text-center">
              <thead>
                <tr>
                  <th>ID do evento</th>
                  <th>Nome do evento</th>
                  <th>Status</th>
                  <th>Data </th>
                  <th>Hora do inicio</th>
                  <th>Hora de término</th>
                  <th>Nome do cliente</th>
                  <th>Nome do colaborador</th>
                  <th></th>
                </tr>
              </thead>
              {{#each eventos}} {{#dataValues}}
              <tbody>
                <tr>
                  <td class="py-1">{{id_evento}}</td>
                  <td>{{nome_evento}}</td>
                  <td>{{status}}</td>
                   <td>{{data_evento}}</td>
                  <td>{{hora_inicio}}</td>
                 <td>{{hora_termino}}</td>
                  <td>{{nome_cliente}}</td>
                  <td>{{nome_colaborador}}</td>
                  <td></td>
                </tr>
              </tbody>
              {{/dataValues}}
              {{/each}}
            </table>
          </div>
        </div>
      </div>
      
</div>
<br>
<div class="row">
      <!--DIV Ranking-->
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="row col-sm">
          <div id="ordem-ativo" class="col-auto  pasta-ordem">
            <a href="/dashboard">Agendamentos Realizados</a>
          </div>
        </div>

        <div class="card-body card-pasta bg-orange">

          <div class="table-responsive">
           <table class="table table-striped text-center">
              <thead>
                <tr>
                  <th>ID evento</th>
                  <th>Nome do Agendamento</th>
                  <th>Status</th>
                  <th>Data</th>
                  <th>Hora de Início</th>
                  <th>Hora de Término</th>
                  <th>Nome do Cliente</th>
                  <th>Nome do colaborador</th>
                </tr>
              </thead>
              {{#each eventosRealizados}} {{#dataValues}}
              <tbody>
                <tr>
                  <td class="py-1">{{id_evento}}</td>
                  <td>{{nome_evento}}</td>
                  <td>{{status}}</td>
                  <td>{{data_evento}}</td>
                  <td>{{hora_inicio}}</td>
                  <td>{{hora_termino}}</td>
                  <td>{{nome_cliente}}</td>
                  <td>{{nome_colaborador}}</td>
          
                </tr>
              </tbody>
              {{/dataValues}}
              {{/each}}
            </table>
          </div>
        </div>
      </div>
    </div>
    <br>


    <div class="row">
      <!--DIV tattoo realizadas-->
      <div class="col-lg-4 grid-margin stretch-card">
        <div class="row col-sm">
          <div id="ordem-ativo" class="col-auto  pasta-ordem">
            <a href="/dashboard"> Quantidade de Agendamentos</a>
          </div>
        </div>

        <div class="card-body card-pasta bg-orange">

          <div class="table-responsive">
            <div class="tatto-container">
              <div class="tatto-contador">
                <span>
                  {{quantidadeAgendamentos}}
                </span>
              </div>
              <div class="tatto-text">
                <span>Agendamentos</span>
              </div>
            </div>
          </div>
        </div>
      </div>


      <!--DIV Clientes-->
      <div class="col-lg-4 grid-margin stretch-card">
        <div class="row col-sm">
          <div id="ordem-ativo" class="col-auto  pasta-ordem">
            <a href="/dashboard"> Quantidade de Clientes Cadastrados</a>
          </div>
        </div>

        <div class="card-body card-pasta bg-orange">

          <div class="table-responsive">
            <div class="tatto-container">
              <div class="tatto-contador">
                <span>
                  {{quantidadeClientes}}
                </span>
              </div>
              <div class="tatto-text">
                <span>Clientes Cadastrados</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!--DIV estoque-->
      <div class="col-lg-4 grid-margin stretch-card">
        <div class="row col-sm">
          <div id="ordem-ativo" class="col-auto  pasta-ordem">
            <a href="/dashboard">Materiais em falta</a>
          </div>
        </div>

        <div class="card-body card-pasta bg-orange">

          <div class="table-responsive">
            <table class="table table-striped text-center">
              <thead>
                <tr>
                  <th>ID do material</th>
                  <th>Nome</th>
                  <th>Quantidade</th>
                  <th>Valor por unidade</th>
                  <th></th>
                </tr>
              </thead>
              {{#each materiaisFaltantes}} {{#dataValues}}
              <tbody>
                <tr>
                  <td class="py-1">{{id_material}}</td>
                  <td>{{nome}}</td>
                  <td>{{quantidade}}</td>
                  <td>{{valor_unidade}}</td>
                  <td></td>
                </tr>
              </tbody>
              {{/dataValues}}
              {{/each}}
            </table>
          </div>
        </div>
      </div>
      <!-- fim DIV estoque-->
    </div>

  </div>

</div>