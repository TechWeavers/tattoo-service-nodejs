<div class="main-panel ">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">

        <div class="row col-sm">
          <div id="ordem-ativo" class="col-auto  pasta-ordem">
            <a href="/dashboard">Lista de eventos</a>
          </div>
        </div>

        <div class="card-body card-pasta bg-orange">

          <div class="table-responsive">
            <table class="table table-striped text-center">
              <thead>
                <tr>
                  <th>Nome do evento</th>
                  <th>id do evento</th>
                  <th>Hora do inicio</th>
                  <th>Data de inicio </th>
                  <th>Hora do termino</th>
                  <th>Nome do cliente</th>
                  <th>Nome do colaborador</th>
                  <th></th>
                </tr>
              </thead>
              {{#each usuarios}} {{#dataValues}}
              <tbody>
                <tr>
                  <td class="py-1">{{nome_evento}}</td>
                  <td>{{id_evento}}</td>
                  <td>{{hora_inicio}}</td>
                  <td>{{data_evento}}</td>
                  <td>{{hora_termino}}</td>
                  <td>{{nome_cliente}}</td>
                  <td>{{nome_colaborador}}</td>
                  <td>
                    <a href="/editar-usuario/{{id_usuario}}" style="color:inherit"><i class="bi bi-pencil"></i></a>

                    <a href="/excluir-usuario/{{id_usuario}}" style="color:inherit"><i class="bi bi-trash-fill"></i></a>
                  </td>
                </tr>
              </tbody>
              {{/dataValues}}
              {{/each}}
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>