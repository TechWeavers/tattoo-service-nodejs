

    <div class="main-panel">        
        <div class="content-wrapper">
            <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="row col-sm">

                    <div id="ordem" class="col-auto pasta-ordem">
                        <a href="/listar-colaboradores">Listar colaboradores</a>
                    </div>
                    <div id="ordem" class="col-auto pasta-ordem">
                        <a href="/novo-colaborador">Cadastar novo colaborador</a>
                    </div>
                    <div id="ordem-ativo" class="col-auto pasta-ordem">
                        <a href="/editar-colaborador">Editar colaborador</a>
                    </div>

                    <div class="card-body card-pasta">
                        <table class="table table-striped ">
                            <h4 class="card-title">Colaboradores</h4>
                            <p class="card-description">
                            Atualização de Colaboradores
                            </p>
                            <p class="card-description">Coloque "N/A", caso algum dado seja inexistente.</p>
                            {{#each colaboradores}}
                            {{#dataValues}}
                            <form class="forms-sample" action="/atualizar-colaborador" method="POST">
                            <input type="hidden" name="id_colaborador" class="form-control" id="id_colaborador" value="{{id_colaborador}}">
                                <div class="form-group">
                                    <label class="form-label">Nome:</label>
                                    <input type="name" name="nome" class="form-control" id="nome"
                                    required=" Dado Obrigatório!" value="{{nome}}">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">CPF:</label>
                                    <input type="text" name="cpf" class="form-control" id="cpf"
                                    required=" Dado Obrigatório!" value="{{cpf}}">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Telefone:</label>
                                    <input type="text" name="telefone" class="form-control" id="telefone" required=" Dado Obrigatório!" value="{{telefone}}">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Origem:</label>
                                    <select name="origem" required=" Dado Obrigatório!" class="form-select" aria-label="Default select example">
                                        <option value="celular" selected>Celular</option>
                                        <option value="whatsapp">Whatsapp</option>
                                        <option value="telefone_fixo">Telefone Fixo</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Email:</label>
                                    <input type="email" name="email" class="form-control" id="email" 
                                    required=" Dado Obrigatório!"value="{{email}}">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Rede Social:</label>
                                    <input type="text" name="redeSocial" class="form-control" id="redeSocial" required=" Dado Obrigatório!" value="{{redeSocial}}">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Tipo: </label>
                                    <input type="text" name="tipo" class="form-control" id="tipo"
                                    required=" Dado Obrigatório!" value="{{tipo}}">
                                </div>
                                <button type="submit" class="btn btn-primary mr-2">Atualizar</button>
                                <button class="btn btn-secondary ml-2"><a href="/listar-colaboradores">Cancelar</a></button>
                            </form>
                        </table>
                        {{/dataValues}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
