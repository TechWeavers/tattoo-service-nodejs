<div class="main-panel">        
    <div class="content-wrapper">
        <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Colaboradores</h4>
                    <p class="card-description">
                    Cadastro de Colaboradores
                    </p>
                    {{#each colaboradores}}
                    {{#dataValues}}
                    <form class="forms-sample" action="/atualizar-colaborador" method="POST">
                    <input type="hidden" name="id_colaborador" class="form-control" id="id_colaborador" value="{{id_colaborador}}"> 
                        <div class="form-group">
                            <label class="form-label">Nome:</label>
                            <input type="name" name="nome" class="form-control" id="nome" value="{{nome}}">
                        </div>
                        <div class="form-group">
                            <label class="form-label">CPF:</label>
                            <input type="text" name="cpf" class="form-control" id="cpf" value="{{cpf}}">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Telefone:</label>
                            <input type="text" name="telefone" class="form-control" id="telefone" value="{{telefone}}">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Origem:</label>
                            <select name="origem" class="form-select" aria-label="Default select example">
                                <option value="celular" selected>Celular</option>
                                <option value="whatsapp">Whatsapp</option>
                                <option value="telefone_fixo">Telefone Fixo</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Email:</label>
                            <input type="email" name="email" class="form-control" id="email" value="{{email}}">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Rede Social:</label>
                            <input type="text" name="redeSocial" class="form-control" id="redeSocial" value="{{redeSocial}}">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Tipo: </label>
                            <input type="text" name="tipo" class="form-control" id="tipo" value="{{tipo}}">
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Cadastrar</button>
                        <button class="btn btn-light">Cancelar</button>
                    </form>
                    {{/dataValues}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
