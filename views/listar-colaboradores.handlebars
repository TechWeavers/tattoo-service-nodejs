<div class="main-panel">
    <div class="content-wrapper">
        <div class="row ">
            <div class="col-lg-12 grid-margin stretch-card">

                <div class="row col-sm">
                    <div id="ordem-ativo" class="col-auto pasta-ordem">
                        <a href="/listar-colaboradores">Listar colaboradores</a>
                    </div>
                    <div id="ordem" class="col-auto  pasta-ordem">
                        <a href="/novo-colaborador">Cadastrar novo colaborador</a>
                    </div>
                </div>
                <div class="card-body card-pasta bg-orange">
                    <div class="table-responsive ">
                        <table class="table table-striped ">
                            <h4 class="card-title">Lista de Colaboradores</h4>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th>CPF</th>
                                    <th>Telefone</th>
                                    <th>Email</th>
                                    <th>Rede</th>
                                    <th>Tipo</th>
                                    <th>Editar</th>
                                </tr>
                            </thead>
                            {{#each colaboradores}} {{#dataValues}} 
                            <tbody>
                                <tr>
                                    <td class="py-1">{{id_colaborador}}</td>
                                    <td>{{nome}}</td>
                                    <td>{{cpf}}</td>
                                    <td>{{telefone}}</td>
                                    <td>{{email}}</td>
                                    <td>{{redeSocial}}</td>
                                    <td>{{tipo}}</td>
                                    <td>
                                        <button class="btn btn-secondary"><a href="/editar-colaborador/{{id_colaborador}}" style="color:inherit">Editar</a></button>
                                        <button type="button" class="btn btn-primary" id="confirmDelete"><a href="/excluir-colaborador/{{id_colaborador}}" style="color:inherit">Deletar</a></button>
                                    </td>
                                </tr>
                            </tbody>
                            {{/dataValues}} {{/each}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
