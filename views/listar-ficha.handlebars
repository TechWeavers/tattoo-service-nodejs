<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <!--<button class="btn btn-primary col-2 m-3"><a href="/novo-cliente" style="color:inherit">Ficha de Anamnese</a></button>-->
    </div>
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Dados da ficha</h4>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID Cliente</th>
                    <th>1º Alergia</th>
                    <th>2º Alergia</th>
                    <th>1º Medicação</th>
                    <th>2º Medicação</th>
                    <th>1ºDoença</th>
                    <th>2º Doença</th>
                    <th></th>
                  </tr>
                </thead>
                {{#each cliente}} 
                {{#dataValues}} 
                <tbody>
                  <tr>
                    <td class="py-1">{{id_cliente_ficha}}</td>
                    <td>{{alergia1}}</td>
                    <td>{{alergia2}}</td>
                    <td>{{medicacao1}}</td>
                    <td>{{medicacao2}}</td>
                    <td>{{doenca1}}</td>
                    <td>{{doenca2}}</td>
                   
                    <td>
                      <button class="btn btn-secondary"><a href="/nova-ficha/{{id_cliente_ficha}}" style="color:inherit">Editar ficha</a></button>
                      <button type="button" class="btn btn-primary" id="confirmDelete"><a href="/excluir-dados-ficha/{{id_cliente_ficha}}" style="color:inherit">Deletar</a></button>
                    </td>
                  </tr>
                </tbody>
                {{/dataValues}} 
                {{/each}}
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
