<div class="main-panel">        
  <div class="content-wrapper bg-transparent">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="row col-sm">
          <div id="ordem-ativo" class="col-auto pasta-ordem">
            <a href="#">Redefinição de senha</a>
          </div>
        </div>
        <div class="card-body card-pasta">
          <div class="table-responsive ">
            <table class="table table-striped ">
              <h4 class="card-title">Redefinir senha</h4>
                <form class="forms-sample" action="/alterar-senha" method="POST">
                  <input type="hidden" name="token" class="form-control" id="token" value="{{token}}">
                  <div class="form-group">
                    <label class="form-label">Nova senha</label>
                    <input type="password" name="nova-senha" required=" Dado Obrigatório!" class="form-control" id="novaSenha">
                  </div>
                  <div class="form-group">
                    <label class="form-label">Repita a nova senha:</label>
                    <input type="password" name="repetir-senha" required=" Dado Obrigatório!"  class="form-control" id="repetirSenha">
                  </div>
                  <button type="submit" class="butn butn-primary mr-2">Redefinir</button>
                  
                </form>
              </div>
            </table>
          </div>
        </div>  
      </div>
    </div>
  </div>
</div>
