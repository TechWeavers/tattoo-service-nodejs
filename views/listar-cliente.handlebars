<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <button class="btn btn-primary col-2 m-3"><a href="/novo-cliente" style="color:inherit">Novo Cliente</a></button>
    </div>
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Lista de Cliente</h4>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID Cliente</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th>Rede Social</th>
                    <th></th>
                  </tr>
                </thead>
                {{#each clientes}} 
                {{#dataValues}} 
                <tbody>
                  <tr>
                    <td class="py-1">{{id_cliente}}</td>
                    <td>{{nome}}</td>
                    <td>{{cpf}}</td>
                    <td>{{telefone}}</td>
                    <td>{{email}}</td>
                    <td>{{redeSocial}}</td>
                    <td>
                      <button class="btn btn-secondary"><a href="/editar-cliente/{{id_cliente}}" style="color:inherit">Edit</a></button>
                      <button type="button" class="btn btn-primary" id="confirmDelete"><a href="/excluir-cliente/{{id_cliente}}" style="color:inherit">Delete</a></button>
                    </td>
                  </tr>
                </tbody>
                {{/dataValues}} 
                {{/each}}
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
