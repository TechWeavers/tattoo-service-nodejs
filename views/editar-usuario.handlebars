<div class="main-panel">        
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="row col-sm">

          <div id="ordem" class="col-auto pasta-ordem">
            <a href="/listar-usuarios">Listar usuário</a>
          </div>
          <div id="ordem" class="col-auto pasta-ordem">
            <a href="/novo-usuario">Cadastar novo usuário</a>
          </div>
          <div id="ordem-ativo" class="col-auto pasta-ordem">
            <a href="/editar-usuario">Editar usuário</a>
          </div>

          <div class="card-body card-pasta">
            <table class="table table-striped ">
              <h4 class="card-title">Usuários</h4>
              <p class="card-description">
              Atualização de Usuários
              </p>
              <p class="card-description">Coloque "N/A", caso algum dado seja inexistente.</p>
              {{#each usuarios}} {{#dataValues}} 
              <form action="/atualizar-usuario" method="POST">
                <input type="hidden" name="id_usuario" class="form-control" id="id_usuario" value="{{id_usuario}}"> 
                <div class="mb-3 text-start">
                  <label class="form-label">Usuario:</label>
                  <input type="text" name="usuario" class="form-control" id="usuario" required=" Dado Obrigatório!" value="{{usuario}}">
                </div>
                <div class="mb-3 text-start">
                  <label class="form-label">Senha:</label>
                  <input type="text" name="senha" class="form-control" id="senha" 
                  required=" Dado Obrigatório!"value="***********">
                </div>
                <div class="mb-3 text-start">
                  <button type="submit" class="btn btn-primary mr-2">Atualizar</button>
                  <button class="btn btn-secondary ml-2"><a href="/listar-usuarios">Cancelar</a></button>
                </div>
              </form>
            </table>
            {{/dataValues}}
            {{/each}}
          </div>
        </div>
      </div>
  </div>
</div>





